<mapper namespace="com.example.demo.api.mapper.ApiMapper">
    <select id="retrieveOne" parameterType="com.example.demo.dto.TestApiDto" resultType="com.example.demo.dto.TestApiDto">
        select out_seq, plt_id, src_no, loca_id, picking_cd, spmt_type_cd, spmt_yn
        from spmt
        where out_seq = #{outSeq}
    </select>
    
    <select id="retrieveList" resultType="com.example.demo.dto.TestApiDto">
        select out_seq, plt_id, src_no, loca_id, picking_cd, spmt_type_cd, spmt_yn
        from spmt        
    </select>
    
