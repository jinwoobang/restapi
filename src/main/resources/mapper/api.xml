    <insert id="insert" parameterType="java.util.Map">
        INSERT INTO spmt(out_seq, plt_id, src_no, loca_id, spmt_yn, remark)
        VALUES
        <foreach collection="list" item="dto" separator=",">
            (#{dto.outSeq}, #{dto.pltId}, #{dto.srcNo}, #{dto.locaId}, #{dto.spmtYn}, #{map.remark})
        </foreach>
    </insert>
    
    <update id="update" parameterType="com.example.demo.dto.TestApiDto">
        update spmt set src_no = #{srcNo}, loca_id = #{locaId} where out_seq = #{outSeq}        
    </update>
    
    <delete id="delete" parameterType="com.example.demo.dto.TestApiDto">
       delete from spmt where out_seq = #{outSeq}        
    </delete>
